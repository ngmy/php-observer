{
    "name": "ngmy/observer",
    "type": "library",
    "description": "A PHP library to implement the observer pattern",
    "keywords": [
        "observer pattern",
        "design pattern",
        "subject",
        "observer",
        "pubsub",
        "publisher",
        "subscriber",
        "event",
        "event listener",
        "event handler"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Yuta Nagamiya",
            "email": "y.nagamiya@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3|^8.0"
    },
    "require-dev": {
    },
    "autoload": {
        "psr-4": {
            "Ngmy\\Observer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ngmy\\Observer\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": [
            "@php tools/phpunit --colors=always"
        ],
        "lint": [
            "@php tools/phpcs"
        ],
        "findbugs": [
            "@php tools/phpstan analyse --ansi"
        ],
        "fmt": [
            "@php tools/phpcbf | exit 0",
            "@php tools/php-cs-fixer fix --ansi"
        ],
        "docs": [
            "@php tools/phpDocumentor --force"
        ]
    }
}
